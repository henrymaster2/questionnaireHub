{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["node", "next", "next/types/global"]
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "server.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "prisma"]
}
